  #include <iostream>

// Function to check if the sum of digits is even
bool isSumOfDigitsEven(int number) {
    int sum = 0;
    while (number != 0) {
        sum += number % 10;
        number /= 10;
    }
    return sum % 2 == 0;
}

// Function to solve problems with the given conditions
void solveProblems() {
    for (int i = 1; i <= 100; ++i) {
        if (isSumOfDigitsEven(i)) {
            // Your solving logic for problem i goes here
            std::cout << "Solving problem " << i << std::endl;
        }
    }
}

int main() {
    solveProblems();
    return 0;
}








